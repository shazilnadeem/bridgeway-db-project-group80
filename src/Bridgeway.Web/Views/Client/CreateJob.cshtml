@model Bridgeway.Web.Models.CreateJobViewModel

<link rel="stylesheet" href="~/css/client/globals.css" />
<link rel="stylesheet" href="~/css/client/styleguide.css" />
<link rel="stylesheet" href="~/css/client/post-a-job.css" />

<div class="post-a-job">
    <div class="rectangle-42"></div>
    <div class="rectangle-45"></div>
    <div class="text-wrapper-41">Post a Job</div>

    <a href="@Url.Action("Dashboard", "Client")">
        <button class="button-linkout-6"><div class="text-6">Home</div></button>
    </a>

    <form asp-action="CreateJob" asp-controller="Client" method="post">
        @Html.AntiForgeryToken()

        <!-- Title -->
        <input asp-for="Title" class="rectangle-46" required style="padding:15px; font-size:20px;" />
        <div class="text-wrapper-42" style="pointer-events:none;">Job Title</div>
        <span asp-validation-for="Title" style="position:absolute; top:220px; left:120px; color:#ff6b6b;"></span>

        <!-- Description -->
        <textarea asp-for="Description" class="rounded-rectangle" required style="padding:15px; font-size:20px; resize:none;"></textarea>
        <div class="text-wrapper-44" style="pointer-events:none;">Job Description</div>
        <span asp-validation-for="Description" style="position:absolute; top:460px; left:120px; color:#ff6b6b;"></span>

        <!-- Skills (Multi-select) -->
        <select asp-for="SelectedSkillIds"
                asp-items="Model.AvailableSkills"
                multiple="multiple"
                class="rectangle-48"
                style="padding:15px; font-size:20px; height:180px;">
        </select>
        <div class="text-wrapper-43" style="pointer-events:none;">Preferred skills (multi-select)</div>

        <!-- Optional: JobType + Budget (if you want them) -->
        @* 
        <input asp-for="JobType" class="rectangle-50" style="padding:15px; font-size:20px;" />
        <div class="text-wrapper-47" style="pointer-events:none;">Job Type (e.g., Remote, Onsite)</div>

        <input asp-for="Budget" type="number" step="0.01" class="rectangle-51" style="padding:15px; font-size:20px;" />
        <div class="text-wrapper-48" style="pointer-events:none;">Budget</div>
        *@

        <div class="rectangle-49"></div>
        <div class="text-wrapper-46" style="pointer-events:none;">Status: Open</div>

        <button type="submit" class="button-linkout-5" style="border:none;">
            <div class="text-5">Create Job</div>
        </button>
    </form>
</div>

<script src="~/js/client/post-a-job.js"></script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
